{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "ES2018",
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/@types/*"]
    }
  }
}
